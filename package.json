{
  "name": "chat-app",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "ui:add": "cd packages/ui && bunx --bun shadcn-ui@latest add",
    "db:generate": "cd packages/db && prisma generate",
    "db:studio": "cd packages/db && prisma studio",
    "db:migrate": "cd packages/db && prisma migrate dev --name",
    "db:push": "cd packages/db && prisma db push"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.39",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.4",
    "turbo": "^2.0.6",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.1.18",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@prisma/client": "^5.16.2",
    "@types/bcrypt": "^5.0.2",
    "@types/bun": "^1.1.6",
    "bcrypt": "^5.1.1",
    "prisma": "^5.16.2",
    "zod": "^3.23.8"
  }
}
